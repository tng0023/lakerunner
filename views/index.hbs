<h1>Lake Runner</h1>
<hr>
<div class="addNewTime">
  <h3>Add new time</h3>

<div class="messages">
  {{#each messages.error}}
    <p class="error_msg">{{this}}</p>
  {{/each}}
</div>

<form action="/" method="POST">
  Date: <input name="date" type="date" required>
  <br><br>
  Lake Name: <input name="lakename" type="text" required>
  <br><br>
  Time: <input name="laketimeminutes" type="number" min="0" max="59" required>Minutes</input>
  <br><br>
  <input name="laketimeseconds" type="number" min="1" max="59">Seconds</input>
  <br><br>
  <input name="addTime" type="submit" value="Add New Time">
  <br>
  <hr>
</form>
</div>

<div class="lakeTimes">
  <h3>Lake Times</h3>

{{# each lakes}}
  <p>Date: {{this.date}}</p>
  <p>Lake Name: {{this.lakename}}</p>
  <p>Time: {{this.laketimeminutes}} Minutes
           {{this.laketimeseconds}} Seconds</p>
  <form action="delete" method="POST">
  <input type="hidden" name="_id" value="{{this._id}}">
  <input class="delete_button" type="submit" name="delete" value="Delete">
</form>
  <hr>
  {{/each}}
</div>
